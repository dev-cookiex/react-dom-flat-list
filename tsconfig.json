{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [ "ESNext", "DOM" ],
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "src/*" ],
      "@src": [ "src/index" ]
    },
    "skipLibCheck": true
  },
  "exclude": [ "web.tsx" ]
}
